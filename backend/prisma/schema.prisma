generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  
  relationMode = "prisma"
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String
  role         Role          @default(USER)
  createdAt    DateTime      @default(now())
  appointments Appointment[]
}

model Appointment {
  title     String
  startTime DateTime
  endTime   DateTime
  userId    String
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
}

model Note {
  title     String
  content   String?
  createdAt DateTime  @default(now())
  userId    String
  id        Int       @id @default(autoincrement())
  deletedAt DateTime?
}

enum Role {
  USER
  ADMIN
}
